<%
  url =
    if oauth_service_label.persisted?
      oauth_service_label_path(oauth_service_label, login_name: @owner.login_name, app_name: @application.name)
    else
      oauth_service_labels_path(login_name: @owner.login_name, app_name: @application.name)
    end
%>
<%= form_for(oauth_service_label, url: url) do |f| %>
